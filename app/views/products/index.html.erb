<div class="container">
	<div class="row">
		<div class="col-md-2" >
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>ジャンル検索</th>
					</tr>
				</thead>

				<tbody>
					<% @genres.each do |genre| %>
					<tr>
						<td>
							<%=link_to genre.name,products_path　genre_id: genre.id %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<div class="col-md-10">
			<div class="col-md-12 col-xs-offset-3" >
				<h3>商品一覧 (全x件)</h3>
			</div>

			<% @products.each do |product| %>
			<div class="row form-group">
				<div class="col-xs-3" >

					<%= attachment_image_tag product, :image, :limit, 50,50, format: 'jpeg',size: "50x50" %>
				</div>
				<div class="col-xs-3" >

					<h4> 商品名<%= link_to product.product_name,product_path(product) %></h4>
				</div>
				<div>
					<div class="col-xs-3" >
						<h4> <%= product.tax_included_price %>円</h4>
					</div>
				</div>
			</div>
			<% end %>
		</div>
	</div>
</div>
</div>
