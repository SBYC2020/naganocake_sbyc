<div class="container">

<h3>新規会員登録</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= f.label :名前, class: "col-xs-3" %>
  <div class="row form-group">
    <div class="col-xs-3">
      <%= f.text_field :surname, placeholder: "姓",autofocus: true, class: "form-control" %>
    </div>
    <div class="col-xs-3">
      <%= f.text_field :name, placeholder: "名", class: "form-control" %>
    </div>
  </div>

  <%= f.label :フリガナ, class: "col-xs-3" %>
  <div class="row form-group">
    <div class="col-xs-3">
      <%= f.text_field :kana_surname, placeholder: "セイ", class: "form-control" %>
    </div>
    <div class="col-xs-3">
      <%= f.text_field :kana_name, placeholder: "メイ", class: "form-control" %>
    </div>
  </div>

  <%= f.label :メールアドレス, class: "col-xs-3" %>
  <div class="form-group row">
    <div class="col-xs-3">
      <%= f.email_field :email, placeholder: "email@example.com", autocomplete: "email", class: "form-control"  %>
    </div>
  </div>

  <%= f.label :"郵便番号(ハイフンなし)", class: "col-xs-3" %>
  <div class="form-group row">
    <div class="col-xs-3">
      <%= f.text_field :postal_code, placeholder: "1234567", class: "form-control"  %>
    </div>
  </div>

  <%= f.label :住所, class: "col-xs-3" %>
  <div class="form-group row">
    <div class="col-xs-6">
      <%= f.text_field :address, placeholder: "東京都＊＊区", class: "form-control"  %>
    </div>
  </div>

  <%= f.label :"電話番号(ハイフンなし)", class: "col-xs-3" %>
  <div class="form-group row">
    <div class="col-xs-3">
      <%= f.text_field :phone_number, placeholder: "000000000", class: "form-control"  %>
    </div>
  </div>

  <%= f.label :"パスワード(6文字以上)", class: "col-xs-3" %>
  <div class="form-group row">
    <div class="col-xs-3">
      <%= f.password_field :password, placeholder: "******", autocomplete: "new-password", class: "form-control" %>
    </div>
  </div>

  <%= f.label :"パスワード(確認用)", class: "col-xs-3" %>
  <div class="form-group row">
    <div class="col-xs-3">
      <%= f.password_field :password_confirmation, placeholder: "******", autocomplete: "new-password", class: "form-control"  %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-success col-xs-2 col-xs-offset-5" %>
  </div>
<% end %>

<div class="row">
  <div class="col-xs-12">
<h4>すでにご登録がお済みの方</h4>
<%= link_to 'こちら', new_customer_session_path %>
<span>からログインしてください</span>
</div>
</div>


</div>


