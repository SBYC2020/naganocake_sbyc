<div class="container">

<h3>配送先登録/一覧</h3>

<%= form_for(@shipping_address) do |f| %>

<%= f.label :"郵便番号(ハイフンなし)", class: "col-xs-3" %>
  <div class="form-group row">
    <div class="col-xs-3">
      <%= f.text_field :postal_code,class: "form-control"  %>
    </div>
  </div>


 <%= f.label :住所, class: "col-xs-3" %>
  <div class="form-group row">
    <div class="col-xs-6">
      <%= f.text_field :address, class: "form-control"  %>
    </div>
  </div>


<%= f.label :宛名, class: "col-xs-3" %>
  <div class="row form-group">
    <div class="col-xs-3">
      <%= f.text_field :address_name, class: "form-control" %>
    </div>
    <div class="actions">
    <%= f.submit "登録する",class: "btn btn-success col-xs-1 col-xs-offset-3" %>
  	</div>
 </div>

<% end %>


<table class="table table-bordered">
<thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
  	<% @shipping_addresses.each do |address| %>
  	<tr>
  		<td>
  			<%= address.postal_code %>
  		</td>
  		<td>
  			<%= address.address %>
  		</td>
  		<td>
  			<%= address.address_name %>
  		</td>
  		<td>
  			<%= link_to"編集する", edit_shipping_address_path(address),class: "btn btn-primary" %>
  			<%= link_to"削除する", shipping_address_path(address), method: :delete,class: "btn btn-danger" %>
  		</td>
  	</tr>
  	<% end %>
  </tbody>


</table>



</div>

