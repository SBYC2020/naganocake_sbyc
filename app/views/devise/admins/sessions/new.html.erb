<div class="container">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


   <%= f.label :メールアドレス, class: "col-xs-2 col-xs-offset-4" %>
  <div class="form-group row">
    <div class="col-xs-3">
      <%= f.email_field :email,  autocomplete: "email", class: "form-control"  %>
    </div>
  </div>

   <%= f.label :"パスワード", class: "col-xs-2 col-xs-offset-4" %>
  <div class="form-group row">
    <div class="col-xs-3">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control"  %>
    </div>
  </div>


  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-primary col-xs-2 col-xs-offset-5" %>
  </div>
<% end %>

</div>


