<div class="container">
	<h2>注文履歴詳細</h2>
	<div class="row">
	    <div class="col-xs-6">
	    	<h3>注文情報</h3>
	    	<table class="table table-bordered">
	    		<thead>
	    			<tr>
	    				<th class="success">注文日</th><td><%= @order.created_at %></td>
	    			</tr>
	    			<tr>
	    				<th class="success">配送先</th><td><%= @order.postal_code %><br>
	                     <%= @order.address %><%= @order.name %><br>
	                 </td>
	    			</tr>
	    			<tr>
	    				<th class="success">支払方法</th><td><%= @order.payment_method %></td>
	    			</tr>
	    			<tr>
	    				<th class="success">ステータス</th><td><%= @order.order_status %></td>
	    			</tr>
	    			</tr>
	    		</thead>
	    	</table>
	    	</div>
	  <div class="col-xs-3">
	      <h3>請求情報</h3>
	      <table class="table table-bordered">
	      	<thead>
	      		<tr>
	      			<th class="success">商品合計</th><td><%= @order.total_payment %></td>
	      		</tr>
	      		<tr>
	      			<th class="success">配送料</th><td><%= @order.postage %></td>
	      		</tr>
	      		<tr>
	      			<th class="success">ご請求額</th><td><%= @order.total_payment + @order.postage %></td>
	      		</tr>
	      	</thead>
	      	<tbody>
	      		<tr>
	      		</tr>
	      	</tbody>
	      </table>
	  </div>
	</div>
</div>
<div class="container">
	<div class="row">
	  <div class="col-xs-10 ">
	   <h3>注文内容</h3>
	   <table class="table table-bordered">
	   	<thead>
	   		<tr>
	   			<th class="success">商品名</th>
	   			<th class="success">単価</th>
	   			<th class="success">個数</th>
	   			<th class="success">小計</th>
	   		</tr>
	   	</thead>
	   	<tbody>
	   		<% @order.orders_products.each do |orders_product| %>
	   		<tr>
	   			<td><%= orders_product.product.product_name %></td>
	   			<td><%= orders_product.product.tax_included_price %></td>
	   			<td><%= orders_product.quantity %></td>
	   			<td><%= orders_product.price * orders_product.quantity%></td>
	   		</tr>
	   		<% end %>
	   	</div>
	   	</tbody>
	   </table>
	 </div>
	</div>
</div>

