<div class="container">
	<h1>ジャンル追加・一覧画面</h1>
	<br>

	<div class="row">
			<%= form_for @genre, url: admin_genres_path(@genre) do |f|%>
	<%= render 'layouts/errors', obj: @genre %>

		<div class="col-xs-1">
			<%= f.label :ジャンル %>
		</div>
		<div class="col-xs-2">
			<%= f.text_field :name, class: "name" %>
		</div>
		<div class="col-xs-1">
			<label><%= f.radio_button :is_active, true %> 有効 </label>
		</div>
		<div class="col-xs-1">
			<label><%= f.radio_button :is_active, false %> 無効 </label>
		</div>
		<div class="col-xs-2">
			<%=f.submit "追加", class: "btn btn-primary" %>
		</div>
			<% end %>
	</div>
	<br>

	<div class="row">
		<div class="col-xs-5">
			<table class="table table-hove">
				<thead>
					<tr>
						<th>ジャンル</th>
						<th>状態</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @genres.each do |g| %>
					<tr>
						<td><%= g.name %></td>
						<td><% if g.is_active == true %>
							<p>有効</p>
							<% else %>
							<p>無効</p>
							<% end %>
						</td>
						<td><div class="col-xs-1">
							<%= link_to "編集する", edit_admin_genre_path(g), class: "btn btn-info" %>
							</div>
				 		</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>