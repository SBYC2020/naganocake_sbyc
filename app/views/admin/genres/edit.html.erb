<div class="container">
	<h1>ジャンル編集画面</h1>
	<br>

	<%= render "share/error_messages", object: @genre %>

	<div class="row">
			<%= form_for @genre, url: admin_genre_path(@genre.id) do |f|%>
		<div class="col-xs-1">
			<%= f.label :ジャンル %>
		</div>
		<div class="col-xs-2">
			<%= f.text_field :name, class: "name" %>
		</div>
		<div class="col-xs-1">
			<label><%= f.radio_button :is_active, true %> 有効 </label>
		</div>
		<div class="col-xs-1">
			<label><%= f.radio_button :is_active, false %> 無効 </label>
		</div>
		<div class="col-xs-3">
			<%=f.submit "変更を保存する", class: "btn btn-primary" %>
		</div>
			<% end %>
	</div>
</div>