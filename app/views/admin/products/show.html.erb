<div class="container">
	<div class="row">
		<div class="col-xs-offset-1">
			<h3>商品詳細</h3>
		</div>

		<div class="col-xs-4 col-xs-offset-2">
			<%= attachment_image_tag @product, :image, :fill, 300, 200 %>
		</div>

		<div class="col-xs-4">
			<table class="table">
				<tr>
					<th>商品名</th><td><%= @product.product_name %></td>
				</tr>

				<tr>
					<th>商品説明</th><td><%= @product.product_description %></td>
				</tr>

				<tr>
					<th>ジャンル</th><td><%= @product.genre.name %></td>
				</tr>

				<tr>
					<th>税込価格</th><td><%= @product.tax_included_price %>円</td>
				</tr>

				<tr>
					<th nowrap>販売ステータス</th>
					<td>
						<% if @product.sale_status == true %>
							<span>販売中</span>
						<% else %>
							<span>販売停止中</span>
						<% end %>
					</td>
				</tr>
			</table>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-1 col-xs-offset-9">
			<%= link_to '編集する', edit_admin_product_path(@product), class: "btn btn-primary" %>
		</div>
	</div>
</div>

