<div class="container">

<h3>配送先編集</h3>

<%= form_for(@shipping_address) do |f| %>


<%= f.label :"郵便番号(ハイフンなし)", class: "col-xs-3" %>
  <div class="form-group row">
    <div class="col-xs-3">
      <%= f.text_field :postal_code,class: "form-control"  %>
    </div>
  </div>


 <%= f.label :住所, class: "col-xs-3" %>
  <div class="form-group row">
    <div class="col-xs-6">
      <%= f.text_field :address, class: "form-control"  %>
    </div>
  </div>


<%= f.label :宛名, class: "col-xs-3" %>
  <div class="row form-group">
    <div class="col-xs-3">
      <%= f.text_field :address_name, class: "form-control" %>
    </div>

 </div>
 <div class="actions">
    <%= f.submit "編集する",class: "btn btn-primary col-xs-1 col-xs-offset-3" %>
    </div>

<% end %>