<div class="container">
	<h3>注文情報入力</h3>
	<%= form_for @order do |f| %>
		<div class="row">
			<div class="col-xs-offset-1">
				<h4>支払い方法</h4>
			</div>

			<div class="col-xs-offset-2">
				<div class="radio-inline">
					<%= f.radio_button :payment_method, :クレジットカード, checked: "checked" %>
					<%= f.label :クレジットカード, class: "payment_method_label" %>
				</div><br>

				<div class="radio-inline">
					<%= f.radio_button :payment_method, :銀行振込 %>
					<%= f.label :銀行振込, class: "payment_method_label" %>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-xs-offset-1">
				<h4>お届け先</h4>
			</div>
			<div class="col-xs-offset-2">
				<div class="radio-inline">
					<%= radio_button_tag(:address_info, "self_address_info", checked: "checked") %>
					<%= label_tag(:address_info, "ご自身の住所") %><br>
					<span>〒<%= current_customer.postal_code %><%= current_customer.address %><br>
							<%= current_customer.surname %><%= current_customer.name %>
					</span>
				</div><br>

				<div class="radio-inline">
					<%= radio_button_tag(:address_info, "shipping_address_info") %>
					<%= label_tag(:address_info, "登録先住所から選択") %><br>
					<%= f.collection_select :address, @shipping_addresses, :address_info, :address_info %>
				</div>

				<div class="radio_inline">
					<%= radio_button_tag(:address_info, "new_address_info") %>
					<%= label_tag(:address_info, "新しいお届け先") %><br>
					<div class="row">
						<div class="col-xs-3">
							<%= f.label :"郵便番号(ハイフンなし)" %>
						</div>
						<div class="col-xs-3">
							<%= f.text_field :postal_code, placeholder: "1234567", class: "form-control" %>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-3">
							<%= f.label :住所 %>
						</div>
						<div class="col-xs-6">
							<%= f.text_field :address, placeholder: "東京都＊＊区", class: "form-control" %>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-3">
							<%= f.label :宛名 %>
						</div>
						<div class="col-xs-3">
							<%= f.text_field :name, placeholder: "相田周二", class: "form-control" %>
						</div>
					</div>
				</div>
			</div>
			<%= f.submit "注文確認画面へ", class: "btn btn-primary col-xs-offset-8" %>
		</div>
	<% end %>
</div>
