<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h1>会員一覧</h1>
		</div>
		<div class="col-xs-9">
			<table class="table table-hove">
				<thead>
					<tr>
						<th>会員ID</th>
						<th>氏名</th>
						<th>メールアドレス</th>
						<th>ステータス</th>
					</tr>
				</thead>
				<tbody>
					<% @customers.each do |customer| %>
					<tr>
						<td><%= customer.id %></td>
						<td><%= customer.name %></td>
						<td><%= customer.email %></td>
						<td></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>