<div class="container">
	<div class="row">
		<div class="col-xs-2" >
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>ジャンル検索</th>
					</tr>
				</thead>
				<tbody>
					<% @genres.each do |genre| %>
						<tr>
							<td>
								<%=link_to genre.name, products_path(genre_id: genre.id) %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>


			<% @products.each do |product| %>
			<div class="row form-group">
				<div class="col-xs-3" >

					 <%= attachment_image_tag product, :image, :limit, 200,200, format: 'jpeg',size: "200x200" %>
				</div>
				<div class="col-xs-3" >

					<h4> 商品名<%= link_to product.product_name,products_path %></h4>
				</div>
				<div>
					<div class="col-xs-3" >
						<h4> <%= product.tax_included_price %>円</h4>

		<div class="col-xs-10 ">
				<h3>商品一覧 (全<%= @products.count %>件)</h3>
			<div class="row">
				<% @products.each do |product| %>
					<div class="col-xs-3">
						<%= attachment_image_tag product, :image, :limit, 50, 50, size: "180x150", fallback: "no_image.png" %><br>
						<span>商品名</span><span>  <%= link_to product.product_name, product_path(product) %></span>
						<p> <%= product.tax_included_price %>円</p>

					</div>
				<% end %>
			</div>



			<% end %>




		</div>

	</div>
</div>

