<div class="container">
	<div class="row">
		<div class="col-xs-2" >
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>ジャンル検索</th>
					</tr>
				</thead>
				<tbody>
					<% @genres.each do |genre| %>
						<tr>
							<td>
								<%=link_to genre.name, products_path(genre_id: genre.id) %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>

		<div class="col-xs-10 ">
				<h3>商品一覧 (全<%= @products.count %>件)</h3>
			<div class="row">
				<% @products.each do |product| %>
					<div class="col-xs-3">
						<%= attachment_image_tag product, :image, :limit, 50, 50, size: "180x150", fallback: "no_image.png" %><br>
						<span>商品名</span><span>  <%= link_to product.product_name, product_path(product) %></span>
						<p> <%= product.tax_included_price %>円</p>

					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>

