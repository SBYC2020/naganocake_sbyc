<div class="container">

<h3>　登録情報編集　</h3>

<%= form_for(@customer) do |f| %>

  <%= f.label :名前, class: "col-xs-3" %>
  <div class="row form-group">
    <div class="col-xs-3">
      <%= f.text_field :surname, autofocus: true, class: "form-control" %>
    </div>
    <div class="col-xs-3">
      <%= f.text_field :name, placeholder: "名", class: "form-control" %>
    </div>
  </div>

  <%= f.label :フリガナ, class: "col-xs-3" %>
  <div class="row form-group">
    <div class="col-xs-3">
      <%= f.text_field :kana_surname, placeholder: "セイ", class: "form-control" %>
    </div>
    <div class="col-xs-3">
      <%= f.text_field :kana_name, placeholder: "メイ", class: "form-control" %>
    </div>
  </div>

  <%= f.label :メールアドレス, class: "col-xs-3" %>
  <div class="form-group row">
    <div class="col-xs-3">
      <%= f.email_field :email, placeholder: "email@example.com", autocomplete: "email", class: "form-control"  %>
    </div>
  </div>

  <%= f.label :"郵便番号(ハイフンなし)", class: "col-xs-3" %>
  <div class="form-group row">
    <div class="col-xs-3">
      <%= f.text_field :postal_code, placeholder: "1234567", class: "form-control"  %>
    </div>
  </div>

  <%= f.label :住所, class: "col-xs-3" %>
  <div class="form-group row">
    <div class="col-xs-6">
      <%= f.text_field :address, placeholder: "東京都＊＊区", class: "form-control"  %>
    </div>
  </div>

  <%= f.label :"電話番号(ハイフンなし)", class: "col-xs-3" %>
  <div class="form-group row">
    <div class="col-xs-3">
      <%= f.text_field :phone_number, placeholder: "000000000", class: "form-control"  %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "編集内容を保存する", class: "btn btn-primary col-xs-2 col-xs-offset-3" %>
  </div>
<% end %>
<div class="row">
<%= link_to '退会する', customers_confirm_path, class: "btn btn-danger col-xs-1 col-xs-offset-2" %>
</div>


</div>


