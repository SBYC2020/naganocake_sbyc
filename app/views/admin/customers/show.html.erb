<div class="container">
	<h1>会員詳細画面</h1>
	<br>

	<div class="row">
		<div class="col-xs-3">
			<p>顧客ID</p>
		</div>
		<div class="col-xs-1">
			<%= @customer.id %>
		</div>
		<div class="col-xs-1">
			<% if @customer.account_status == true %>
			<p>有効会員</p>
			<% else %>
			<p>退会済み</p>
			<% end %>
		</div>
	</div>
	<br>

	<div class="row">
		<div class="col-xs-3">
			<p>氏名</p>
		</div>
		<div class="col-xs-3">
			<%= @customer.surname %>
			<%= @customer.name %>
		</div>
	</div>
	<br>

	<div class="row">
		<div class="col-xs-3">
			<p>フリガナ</p>
		</div>
		<div class="col-xs-3">
			<%= @customer.kana_surname %>
			<%= @customer.kana_name %>
		</div>
	</div>
	<br>

	<div class="row">
		<div class="col-xs-3">
			<p>郵便番号</p>
		</div>
		<div class="col-xs-3">
			<%= @customer.postal_code %>
		</div>
	</div>
	<br>

	<div class="row">
		<div class="col-xs-3">
			<p>住所</p>
		</div>
		<div class="col-xs-3">
			<%= @customer.address %>
		</div>
	</div>
	<br>

	<div class="row">
		<div class="col-xs-3">
			<p>電話番号</p>
		</div>
		<div class="col-xs-3">
			<%= @customer.phone_number %>
		</div>
	</div>
	<br>

	<div class="row">
		<div class="col-xs-3">
			<p>メールアドレス</p>
		</div>
		<div class="col-xs-3">
			<%= @customer.email %>
		</div>
	</div>
	<br>

	<div class="row">
		<div class="col-xs-1">
    		<%= link_to '編集する', edit_admin_customer_path, class: "btn btn-info" %>
    	</div>
    	<div class="col-xs-2">
    		<%= link_to "注文履歴一覧を見る", admin_orders_path, class: "btn btn-success" %>
    	</div>
	</div>
</div>


