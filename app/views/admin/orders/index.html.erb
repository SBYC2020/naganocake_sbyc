<div class="container">
	<div class="row">
		<h1>注文一覧画面</h1>
		<div class="col-xs-10 col-xs-offset-1">
			<table class="table table-hove">
				<thead>
					<tr>
						<th>購入日時</th>
						<th>購入者</th>
						<th>注文個数</th>
						<th>注文ステータス</th>
					</tr>
				</thead>
				<tbody>
					<% @orders.each do |order| %>
					<tr>
						<td><%= link_to order.created_at.strftime("%Y-%m-%d %H:%M"), admin_order_path(order.id) %>
						</td>
						<td><%= order.name %></td>
						<td><% total_count = 0 %>
							<% order.orders_products.each do |order_product| %>
			                <% total_count += order_product.quantity %>
		                    <% end %>
		                    <%= total_count %>
		                </td>
						<td><%= order.order_status %>
						</td>
					</tr>
					<%= paginate @orders %>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>